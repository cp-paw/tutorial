    !BOND ATOM1='C_2' ATOM2='C_3' scale=+1. !END
    !BOND ATOM1='C_3' ATOM2='O_6' scale=-1. !END
  !END
  !OUTPUT ID='DBN'  FILENAME='dbn.dat' !END

